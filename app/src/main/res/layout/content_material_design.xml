<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_material_design"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bridgelabz.app.activity.MaterialDesign"
    tools:showIn="@layout/activity_material_design">

    <TextView
        android:text="Without material Radio Button"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:text="RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton5" />

        <RadioButton
            android:text="RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton6" />
    </RadioGroup>


    <TextView
        android:text="Material Radio Button"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text3" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.rey.material.widget.RadioButton
            android:checked="true"
            style="@style/Material.Drawable.RadioButton"
            android:text="RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton7" />

        <com.rey.material.widget.RadioButton
            style="@style/Material.Drawable.RadioButton"
            android:text="RadioButton"
            app:et_helper="Enter password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton8" />
    </RadioGroup>

    <com.rey.material.widget.EditText
        android:id="@+id/password"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:et_helper="Enter password"
        android:inputType="textPassword"
        app:et_inputId="@+id/textfield_et_label_error_input"
        android:hint="Input with helper + error"
        app:et_supportMode="helperWithError"
        app:v_styleId="@array/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!--app:v_styleId="@array/edittext"-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nameLayout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/email"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            app:et_helper="Enter Email"
            android:inputType="text"
            android:hint="Input with helper + error"
            app:et_supportMode="helperWithError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <com.rey.material.widget.Button
        android:id="@+id/submit"
        style="@style/Material.Drawable.Ripple.Wave.Light"
        android:text="Submit"
        android:background="@null"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/zaheer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView2" />

</LinearLayout>
