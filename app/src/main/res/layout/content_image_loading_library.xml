<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_image_loading_library"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bridgelabz.app.activity.ImageLoadingLibrary"
    tools:showIn="@layout/activity_image_loading_library">

    <Button
        android:text="Glide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/glide"
        app:layout_constraintLeft_toLeftOf="@+id/content_image_loading_library"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/content_image_loading_library"
        android:layout_marginTop="64dp" />

    <Button
        android:text="picasso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/picasso"
        app:layout_constraintLeft_toRightOf="@+id/glide"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/glide" />

    <Button
        android:text="volley"
        android:layout_width="89dp"
        android:layout_height="49dp"
        android:id="@+id/volley"
        app:layout_constraintLeft_toRightOf="@+id/picasso"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/picasso" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/imageRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="120dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_image_loading_library"
        app:layout_constraintTop_toBottomOf="@+id/glide" />

    <Button
        android:text="Fresco"
        android:layout_width="91dp"
        android:layout_height="51dp"
        android:id="@+id/fresco"
        app:layout_constraintLeft_toRightOf="@+id/volley"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/volley"
        app:layout_constraintBottom_toBottomOf="@+id/volley"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
